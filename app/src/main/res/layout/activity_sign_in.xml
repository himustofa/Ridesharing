<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.SignInActivity">

    <!-- Phone -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_user_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/user_mobile_number"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:maxLength="11"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <!-- Code -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_user_mobile_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/user_mobile_code"
            android:hint="Code"
            android:inputType="phone"
            android:maxLength="4"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:textAlignment="center"
        android:text="SMS may be sen to verify your number. Message and data rates may apply."
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/sent_button"
        android:text="Sent"
        android:textColor="@color/white_color"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/submit_button"
        android:text="Submit"
        android:visibility="gone"
        android:textColor="@color/white_color"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
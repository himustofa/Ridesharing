<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/reg_passport"
            android:clickable="true"
            android:background="@drawable/image_border"
            android:src="@drawable/ic_mk_logo"
            android:layout_gravity="left"
            android:layout_width="140dp"
            android:layout_height="140dp" />

        <!-- Full Name -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_reg_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/reg_full_name"
                android:hint="Full Legal Name"
                android:inputType="textPersonName"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <!-- Email -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_reg_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/reg_email"
                android:hint="E-mail"
                android:inputType="textWebEmailAddress"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <!-- Phone -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_reg_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/reg_mobile_number"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:maxLength="11"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <!-- NID | Passport | Birth Certificate -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_reg_nid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/reg_nid"
                android:inputType="text"
                android:hint="NID or Birth Certificate"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:textAlignment="center"
            android:text="By registering you agree to the Terms and Conditions and Privacy Policy."
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/reg_button"
            android:text="Register"
            android:textColor="@color/white_color"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</ScrollView>